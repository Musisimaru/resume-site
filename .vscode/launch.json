{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "üß© Root-config: –æ—Ç–∫—Ä—ã—Ç—å –≤ –±—Ä–∞—É–∑–µ—Ä–µ",
      "type": "pwa-chrome",            // –º–æ–∂–Ω–æ pwa-msedge, –µ—Å–ª–∏ –ø–æ–ª—å–∑—É–µ—à—å Edge
      "request": "launch",
      "url": "http://localhost:9000",
      "webRoot": "${workspaceFolder}/src/frontend/host", // –µ—Å–ª–∏ –º–æ–Ω–æ—Ä–µ–ø–æ, —É–∫–∞–∂–∏ –ø—É—Ç—å –ø–∞–∫–µ—Ç–∞ root-config
      "sourceMaps": true,
      "sourceMapPathOverrides": {
        "webpack:///./*": "${workspaceFolder}/src/frontend/host/*",
        "webpack:///*": "${workspaceFolder}/src/frontend/host/*",
        "webpack://[name]/*": "${workspaceFolder}/src/frontend/host/*",
        "webpack://src/*": "${workspaceFolder}/src/frontend/host/src/*",
      },
      "runtimeExecutable": "/Applications/Yandex.app/Contents/MacOS/Yandex",
      "runtimeArgs": ["--remote-debugging-port=9222"]
    },
    {
      "name": "üõ† –ó–∞–ø—É—Å—Ç–∏—Ç—å webpack-dev-server",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/src/frontend/host/node_modules/webpack-dev-server/bin/webpack-dev-server.js",
      "args": ["--mode", "development", "--port", "9000"],
      "cwd": "${workspaceFolder}/src/frontend/host",
      "console": "integratedTerminal"
    }
  ]
}